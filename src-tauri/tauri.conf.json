{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PhantomEar",
  "version": "0.1.0",
  "identifier": "com.phantomear.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "PhantomEar",
        "width": 900,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500,
        "decorations": true,
        "transparent": false,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerHooks": "nsis/hooks.nsi"
      }
    }
  }
}
